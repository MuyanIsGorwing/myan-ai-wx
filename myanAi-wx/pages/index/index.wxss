/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  height: 100%;
}
.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.subtitle {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 60rpx;
}
.chat-button {
  width: 80%;
  height: 100rpx;
  background-color: #007AFF;
  color: #ffffff;
  border-radius: 50rpx;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 20rpx rgba(0, 122, 255, 0.2);
  transition: all 0.3s;
}
.chat-button:active {
  transform: scale(0.98);
  box-shadow: 0 5rpx 10rpx rgba(0, 122, 255, 0.2);
}
